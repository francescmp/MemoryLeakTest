<Page x:Class="ImageMemoryLeak.ImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImageMemoryLeak"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImagePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button Content="Close" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Width="75" Click="OnCloseImagePageClick"/>
        <Image x:Name="IMGControl" Margin="0" Grid.Row="1" Width="900" Height="300"/>

    </Grid>
</Page>
